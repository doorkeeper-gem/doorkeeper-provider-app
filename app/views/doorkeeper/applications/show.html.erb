<div class="span12">
  <header class="page-header">
    <h1>Application: <%= @application.name %></h1>
  </header>
</div>

<div class="span8">
  <h4>Callback url:</h4>
  <p><%= @application.redirect_uri %></p>

  <h4>Application Id:</h4>
  <p><code><%= @application.uid %></code></p>

  <h4>Secret:</h4>
  <p><code><%= @application.secret %></code></p>
</div>

<div class="span4">
  <h3>Actions</h3>
  <p><%= link_to 'List all', oauth_applications_path %></p>
  <p><%= link_to 'Edit', edit_oauth_application_path(@application) %></p>
  <p><%= link_to 'Remove', [:oauth, @application], :method => :delete, :confirm => "Are you sure?" %></p>
</div>
